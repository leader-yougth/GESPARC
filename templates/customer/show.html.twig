{% extends 'layout.html.twig' %}

{% block title %}Customer{% endblock %}

{% block body %}
    <h1>Customer details ! </h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Customer_FirstName</th>
                <td>{{ customer.CustomerFirstName }}</td>
            </tr>
            <tr>
                <th>Customer_LastName</th>
                <td>{{ customer.CustomerLastName }}</td>
            </tr>
            <tr>
                <th>Customer_Avatar</th>
                <td>
                <img src="{{ asset ('uploads/images/avatar/' ~ customer.CustomerAvatar) }}"></td>
            </tr>
            <tr>
                <th>Customer_PositionHeld</th>
                <td>{{ customer.CustomerPositionHeld }}</td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('user_account_new', {'id': customer.id}) }}" class="btn btn-primary"><i class="fa fa-user-add"></i>Create an user accout</a>
    <a href="{{ path('customer_index') }}" class="btn btn-success">back to list</a>

    <a href="{{ path('customer_edit', {'id': customer.id}) }}" class="btn btn-warning">edit</a>

    {{ include('customer/_delete_form.html.twig') }}
{% endblock %}
