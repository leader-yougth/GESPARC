{% extends 'base.html.twig' %}

{% block title %}Entreprise index{% endblock %}

{% block body %}
    <h1>Entreprise index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>NomEntreprise</th>
                <th>SecteurActivite</th>
                <th>LogoEntreprise</th>
                <th>BoitePostal</th>
                <th>SiteWeb</th>
                <th>EmailEntreprise</th>
                <th>PaysEntreprise</th>
                <th>VilleEntreprise</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entreprise in entreprises %}
            <tr>
                <td>{{ entreprise.NomEntreprise }}</td>
                <td>{{ entreprise.SecteurActivite }}</td>
                <td><img src="{{ asset ('uploads/images/logo/' ~ entreprise.LogoEntreprise) }}"></td>
                <td>{{ entreprise.BoitePostal }}</td>
                <td>{{ entreprise.SiteWeb }}</td>
                <td>{{ entreprise.EmailEntreprise }}</td>
                <td>{{ entreprise.PaysEntreprise }}</td>
                <td>{{ entreprise.VilleEntreprise }}</td>
                <td>
                    <a href="{{ path('entreprise_show', {'id': entreprise.id}) }}">show</a>
                    <a href="{{ path('entreprise_edit', {'id': entreprise.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('entreprise_new') }}">Create new</a>
{% endblock %}
