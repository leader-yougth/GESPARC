{% extends 'layout.html.twig' %}

{% block title %}UserAccount{% endblock %}

{% block body %}
    <h1>User Account</h1>

    <table class="table table-sm table-striped">
        <tbody>
            <tr>
                <th>Username</th>
                <td>{{ user_account.username }}</td>
            </tr>
            <tr>
                <th>Customer UserAccount</th>
                <td>{{ user_account.customer.CustomerFirstName }} {{ user_account.customer.CustomerLastName }}</td>
            </tr>
            <tr>
                <th>Avatar: </th>
                <td>
                    <img src="{{ asset ('uploads/images/avatar/' ~ user_account.customer.CustomerAvatar) }}">
                </td>
            </tr>
            <tr>
                <th>IsAdmin</th>
                <td>{{ user_account.IsAdmin ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_account_index') }}">back to list</a>

    <a href="{{ path('user_account_new_edit', {'id': user_account.id, 'username': user_account.username}) }}">edit</a>

    {{ include('user_account/_delete_form.html.twig') }}
{% endblock %}
